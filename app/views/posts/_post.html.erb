<div class="chat-element post">
  <a class="pull-left" href="#">
    <%= profile_image(:small, {}, post.user) %>
  </a>
  <div class="media-body">
    <small class="pull-right"><%=time_ago_in_words(post.created_at)%></small>
    <strong class="name"><%=post.user.name%></strong> <span class="username" style="color: #8899a6;">@<%=post.user.username%></span>
    <div style="font-size: 18px !important;">
      <p class="content m-b-xs m-t-xs">
        <%=post.content.html_safe%>
      </p>
    </div>
  </div>
</div>
