<div class="row">
  <%= react_component("app.ProfileBox", {userName: current_user.name,
                                         username: current_user.username,
                                         profileImage: profile_image,
                                         postsCount: current_user.posts.length,
                                         followedsCount: current_user.followeds.length,
                                         followingsCount: current_user.followers.length}) %>
  <div class="col-lg-9">
    <div class="chat-form" style="margin: 0px auto; width: 60%;">
      <div class="col-xs-2" style="width: 75px !important;">
        <%= profile_image(:small, {float: 'left !important', "margin-right": "15px" }) %>
      </div>
      <div class="col-xs-10">
        <%= render "form" %>
      </div>
    </div>

    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="chat-activity-list posts">
          <% if @posts.blank? %>
            <div class="text-center empty">
              <h1>Você ainda não fez nenhuma Postagem :(</h1>
            </div>
          <% else %>
            <% @posts.each do |post| %>
              <%= render post %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
