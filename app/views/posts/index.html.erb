<div class="row">
  <div class="col-lg-3 m-b">
    <div class="widget-head-color-box navy-bg p-lg text-center">
      <%= profile_image %>
      <div class="m-b-md">
        <h2 class="font-bold no-margins"><%=current_user.name%></h2>
        <small>@<%=current_user.username%></small>
      </div>
      <div class="row">
        <div class="col-xs-4"><%=t('posts.post_count')%></div>
        <div class="col-xs-4"><%=t('posts.following_count')%></div>
        <div class="col-xs-4"><%=t('posts.followers_count')%></div>
      </div>
      <div class="row">
        <div class="col-xs-4"><%= current_user.posts.length %></div>
        <div class="col-xs-4"><%= current_user.followeds.length %></div>
        <div class="col-xs-4"><%= current_user.followers.length %></div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="chat-form" style="margin: 0px auto; width: 60%;">
      <div class="col-xs-2" style="width: 75px !important;">
        <%= profile_image(:small, {float: 'left !important', "margin-right": "15px" }) %>
      </div>
      <div class="col-xs-10">
        <%= render "form" %>
      </div>
    </div>

    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="chat-activity-list posts">
          <% if @posts.blank? %>
            <div class="text-center empty">
              <h1><%=t('posts.empty')%></h1>
            </div>
          <% else %>
            <% @posts.each do |post| %>
              <%= render post %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
