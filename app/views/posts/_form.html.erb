<%= simple_form_for(@post, html: { style: "width: 100% !important;" }) do |f| %>
  <%= f.input :content, as: :summernote, input_html: { class: "form-control", style: "height: 100px;", placeholder: t('posts.whats_happening') } %>
  <div class="text-right m-b" style="">
    <%= f.button :submit, t('posts.post'), class: "btn btn-sm btn-primary m-t-n-xs" %>
  </div>
<% end %>
