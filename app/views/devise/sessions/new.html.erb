<div class="border-form-div loginscreen animated fadeInDown">
  <h3 class="custom-text-color text-center"><%= t('login.welcome') %></h3>
  <h2 class="custom-text-color text-center">Awesome Rails Microblog</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "m-t", role: "form" }) do |f| %>

    <div class="form-group">
      <%= f.input :login, label: false, placeholder: t('login.username'), required: false, autofocus: true, class: "form-control", type: "text" %>
    </div>
    <div class="form-group">
      <%= f.input :password, label: false, placeholder: t('login.password'), required: false, class: "form-control", type: "password" %>
    </div>

    <div class="form-group">
      <div class="custom-text-color">
        <%= f.input :remember_me, as: :boolean, :label => false,
                    input_html: {  style: "float: left; width: 19px; margin-top: -7px; margin-right: 8px;" },
                    inline_label: t('login.remember_me') if devise_mapping.rememberable? %>
      </div>
    </div>

    <%= f.button :submit, t('login.signin'), class: "btn-primary block full-width m-b" %>

    <div class="text-center">
      <%= link_to t('login.forgot_password'), new_password_path(resource_name) %>
    </div>

    <div class="custom-text-color text-center margin-top-10"><%=t('login.new_account_label')%></div><br />

    <%= link_to t('login.signup'), new_registration_path(resource_name), class: "btn btn-sm btn-white btn-block" %>
  <% end %>
</div>
